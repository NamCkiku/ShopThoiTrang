@model IEnumerable<PJ3ShopThoiTrang.Models.HoaDon>

@{
    ViewBag.Title = "Hien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Bootstrap Core CSS -->
<link href="~/Content/Admin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- MetisMenu CSS -->
<link href="~/Content/Admin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

<!-- DataTables CSS -->
<link href="~/Content/Admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">

<!-- DataTables Responsive CSS -->
<link href="~/Content/Admin/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">

<!-- Custom CSS -->
<link href="~/Content/Admin/dist/css/sb-admin-2.css" rel="stylesheet">

<!-- Custom Fonts -->
<link href="~/Content/Admin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông Tin Sản Phẩm 
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã Đơn Hàng
                                </th>
                                <th>Thời Gian
                                </th>
                                <th>Tên Người Đặt
                                </th>
                                <th>Địa Chỉ
                                </th>
                                <th>SĐT
                                </th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>@Html.DisplayFor(modelItem => item.IDHoaDon)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayLap)</td>
                                    <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.SDT)</td>
                                    <td>
                                        <i class="fa fa-pencil-square-o"></i>@Html.ActionLink("Sửa", "Edit", new { id = item.IDHoaDon }) |
                                        <i class="fa fa-info-circle"></i>@Html.ActionLink("Chi Tiết", "Detail", new { id = item.IDHoaDon }) |
                                        <i class="fa fa-trash-o"></i>@Html.ActionLink("Xóa", "Delete", new { id = item.IDHoaDon })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- jQuery -->
<script src="~/Content/Admin/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/Content/Admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/Content/Admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/Content/Admin/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/Content/Admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/Content/Admin/dist/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
