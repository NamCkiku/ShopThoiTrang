@model IEnumerable<PJ3ShopThoiTrang.Models.TinTuc>

@{
    ViewBag.Title = "Hien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Bootstrap Core CSS -->
<link href="~/Content/Admin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- MetisMenu CSS -->
<link href="~/Content/Admin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

<!-- DataTables CSS -->
<link href="~/Content/Admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">

<!-- DataTables Responsive CSS -->
<link href="~/Content/Admin/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">

<!-- Custom CSS -->
<link href="~/Content/Admin/dist/css/sb-admin-2.css" rel="stylesheet">

<!-- Custom Fonts -->
<link href="~/Content/Admin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tin Tức
                       
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã Tin
                                </th>
                                <th>Loại Tin
                                </th>
                                <th>Tiêu Đề Tin
                                </th>
                                <th>Ngày Đăng
                                </th>
                                <th>Mô Tả Tóm Tắt
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeA">
                                    <td>@Html.DisplayFor(modelItem => item.IDTin)</td>
                                    <td>@Html.DisplayFor(modelItem => item.IDLoaiTin)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TieuDeTin)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.NgayDang)</td>
                                    <td class="center">@Html.DisplayFor(modelItem => item.MoTaTomTat)</td>
                                    <td>
                                        <i class="fa fa-pencil-square-o"></i>@Html.ActionLink("Sửa", "Edit", new { id = item.IDTin }) |
                                        <i class="fa fa-info-circle"></i>@Html.ActionLink("Chi Tiết", "Detail", new { id = item.IDTin }) |
                                        <i class="fa fa-trash-o"></i>@Html.ActionLink("Xóa", "Delete", new { id = item.IDTin })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- jQuery -->
<script src="~/Content/Admin/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/Content/Admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/Content/Admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/Content/Admin/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/Content/Admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/Content/Admin/dist/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
